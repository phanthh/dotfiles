#!/bin/sh

dunst &
lxsession &
ibus-daemon -drxR &
thunderbird &
kanshi &

swayidle -w \
	timeout 300 'swaylock -f' \
	timeout 600 'swaymsg "output * dpms off"' resume 'swaymsg "output * dpms on"' \
	before-sleep 'playerctl pause' \
	before-sleep 'swaylock -f' \
	timeout 605 '[ "$(cat /sys/class/power_supply/BAT1/status)" = "Discharging" ] && systemctl suspend' &

alacritty &
util_browse &
clight &

# brightnessctl s 0% &
# exmonctl -s 0% &
sleep 5
keepassxc &
gammastep -l $(curl -s "https://location.services.mozilla.com/v1/geolocate?key=geoclue" | jq '.location | .lat,.lng' | paste -s -d ':') &




