#!/bin/sh

# daemons
dunst &
lxsession -n &
ibus-daemon -drxR &
foot --server &
swayidle -w \
	timeout 3000 'swaylock -f' \
	timeout 3005 'swaymsg "output * dpms off"' resume 'swaymsg "output * dpms on"' \
	before-sleep 'playerctl pause' \
	before-sleep 'swaylock -f' \
	timeout 6005 '[ "$(cat /sys/class/power_supply/BAT1/status)" = "Discharging" ] && systemctl suspend' &

clight &
sway-alttab &

# graphical
thunderbird &
util_browse &
footclient &
keepassxc &

# brightnessctl s 0% &
# exmonctl -s 0% &

# misc dependent daemons 
sleep 5
gammastep -l $(curl -s "https://location.services.mozilla.com/v1/geolocate?key=geoclue" | jq '.location | .lat,.lng' | paste -s -d ':') &







