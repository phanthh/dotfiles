#!/bin/sh

dunst &
lxsession &
ibus-daemon -drxR &
thunderbird &
kanshi &

swayidle -w \
	timeout 3000 'swaylock -f' \
	timeout 3005 'swaymsg "output * dpms off"' \
	resume 'swaymsg "output * dpms on"' \
	before-sleep 'swaylock -f' \
	timeout 6000 '[ "$(cat /sys/class/power_supply/BAT1/status)" = "Discharging" ] \
		&& systemctl suspend' &

alacritty &
brave &
autoadb $HOME/.local/bin/scrcpy '{}' &

sleep 5
clight &
gammastep -l $(curl -s "https://location.services.mozilla.com/v1/geolocate?key=geoclue" | jq '.location | .lat,.lng' | paste -s -d ':') &
# brightnessctl s 0% &
# exmonctl -s 0% &




