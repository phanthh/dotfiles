
#============ CONTROLS 

# Volume
XF86AudioRaiseVolume 
  pactl set-sink-volume @DEFAULT_SINK@ +2% 
XF86AudioLowerVolume 
  pactl set-sink-volume @DEFAULT_SINK@ -2% 
XF86AudioMute 
  pactl set-sink-mute @DEFAULT_SINK@ toggle 
XF86AudioMicMute 
  pactl set-source-mute @DEFAULT_SOURCE@ toggle

super+F8 
  pactl set-sink-volume @DEFAULT_SINK@ +2%
super+F7 
  pactl set-sink-volume @DEFAULT_SINK@ -2% 
super+F6 
  pactl set-sink-mute @DEFAULT_SINK@ toggle 
super+bracketright 
  pactl set-sink-volume @DEFAULT_SINK@ +2%
super+bracketleft
  pactl set-sink-volume @DEFAULT_SINK@ -2%


# Brightness
super+F2 
  brightnessctl s 5%-
super+F3 
  brightnessctl s 5%+

# Display
super+p 
  ~/.bin/displaychoice.sh

# Reload Window Manager:
super + shift + r
	killall sxhkd redshift && bspc wm -r

super+x
  slock 
super+shift+x
  systemctl suspend &
super+shift+Escape
  ~/.bin/prompt "Are you sure you want to reboot ?" "systemctl reboot" 
super+Escape
  ~/.bin/prompt "Are you sure you want to shutdown ?" "systemctl poweroff" 
super+shift+e  
  ~/.bin/prompt "Are you sure you want to logout ?" "bspc quit" 


#=========== WINDOW 

# Kill 
alt+q
	bspc node -c

# Change focus
super+{h,j,k,l}
	bspc node -f {west,south,north,east}

# Move focused
super+shift+{h,j,k,l}
	bspc node -s {west,south,north,east}

super+ shift+{Left,Down,Up,Right}
	bspc node -s {west,south,north,east}

# Window Modes 
super+{e,t,f}
	bspc node -t {tiled,pseudo_tiled,fullscreen}
super+Space
  bspc query -W| xargs -n1 -I '{}' bspc window {} -t floating=on

# Resize Windows:
super+r : {h,j,k,l}
	bspc node -z {left -20 0 || bspc node -z right -20 0, \
		bottom 0 20 || bspc node -z top 0 20,\
		top 0 -20 || bspc node -z bottom 0 -20,\
		right 20 0 || bspc node -z left 20 0}

# Focus or send to the given desktop:
super+{_,shift + }{1-9,0}
	bspc {desktop -f, node -d} '^{1-9,10}'

# Move a floating window
super+{Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}


#============ UTILS 

# Scripts
super+Shift+s 
  exec ~/.bin/scripts.sh
alt+Ctrl+s 
  exec ~/.bin/githubpush.sh

# Web search
alt+s 
  exec ~/.bin/websearch.sh

# Terminal
super+Return 
  exec "$TERMINAL"

# Browser/Browser apps
super+Shift+n 
  exec ~/.bin/browserapp.sh
super+n  
  exec brave 
super+d 
  exec dmenu_run 

# Screen Shot
Ctrl+Print 
  exec ~/.bin/prtsc.sh

# Screen Snip
Print 
  exec "maim -s | xclip -selection clipboard -t image/png"


#============ WORKSPACE 

# Switch next/previous workspace
super+{u,i}	
  bspc desktop -f {prev,next}.local




















































############### Programs Keys ###############

super + n
	brave
super + o
  bspc rule -a \* -o state=floating && $TERMINAL -e nnn
super + e
  bspc rule -a \* -o state=floating && $TERMINAL -e nvim
super + m
  bspc rule -a \* -o state=floating && $TERMINAL -e spotify

