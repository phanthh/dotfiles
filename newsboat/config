
# bind keys
unbind-key j
unbind-key k
unbind-key h
unbind-key l
unbind-key H
unbind-key L
unbind-key c
unbind-key ,

bind-key ; macro-prefix
bind-key j down
bind-key k up
bind-key h quit
bind-key l open
bind-key H prev-feed
bind-key L next-feed
bind-key c toggle-show-read-feeds

browser "~/.bin/browse"

# Feed settings
prepopulate-query-feeds yes
refresh-on-startup yes

macro w set browser "mpv %u" ; open-in-browser ; set browser "~/.bin/browser"

color background default default 
color listnormal color241 default
color listnormal_unread color231 default
color listfocus color16 blue
color listfocus_unread color16 blue
color info default black
color article default default

text-width 80

highlight article "(^Feed:.*|^Title:.*|^Author:.*)" blue default bold
highlight article "(^Link:.*|^Date:.*)" default default
highlight article "https?://[^ ]+" blue default

highlight article "^(Title):.*$" blue default
highlight article "\\[[0-9][0-9]*\\]" magenta default bold
highlight article "\\[image\\ [0-9]+\\]" blue default bold
highlight article "\\[embedded flash: [0-9][0-9]*\\]" blue default bold
highlight article ":.*\\(link\\)$" blue default
highlight article ":.*\\(image\\)$" blue default
highlight article ":.*\\(embedded flash\\)$" magenta default
