# query
qu() {
  brew search '' | fzf --multi --preview "$AUR_WRAPPER -Si {1}"
}
# install
in() {
  brew install | fzf --multi --preview "$AUR_WRAPPER -Si {1}" | xargs -ro $AUR_WRAPPER -S
}
# remove
re() {
  brew uninstall -Qeq | fzf --multi --preview "$AUR_WRAPPER -Qi {1}" | xargs -ro $AUR_WRAPPER -Rns
}
# update
up() {
  brew update && brew upgrade
}
