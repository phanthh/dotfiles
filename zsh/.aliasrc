#======================== override
alias ls="ls -hv --color=auto --time-style=iso --group-directories-first"
alias cmatrix="cmatrix -C blue"
alias ttyper="ttyper --language english1000"
alias diff="diff --color=auto"
alias grep="grep --color=auto"
alias msfconsole="msfconsole --quiet -x \"db_connect ${USER}@msf\""
alias R="R --quiet"
alias npm="pnpm"
alias npx="pnpm dlx"
alias wget="wget -c --hsts-file='$XDG_CACHE_HOME/wget-hsts'"
alias grep="rg"

#======================== shortcuts
# [ ! -z $DISPLAY ] && alias ls="exa"
alias t="tldr"
alias wi="which"
alias s="sudo"
alias si="sudo !!"
alias su="sudo -i"
alias la="ls -la"
alias sctl="sudo systemctl"
alias ka="killall"
alias jl="prime-run jupyter lab"
alias jn="prime-run jupyter-notebook"
alias mm="micromamba"
alias mma="micromamba activate"
alias mmd="micromamba deactivate"
alias b="distrobox"
alias bs="~/.sh/util_distroboxsetup"
alias br="~/.sh/util_browse"
alias fm="~/.sh/util_filemanager"
alias nb="newsboat"
alias wine-run="~/.sh/util_wine"
alias proton-run="~/.sh/util_proton"

#======================== utils
alias myip="curl ifconfig.me"
alias lsusr="awk -F: '{ print $1 }' /etc/passwd"
alias lsize="du -h | sort -h"
alias pastex="xclip -o -selection clipboard >"
alias mimedef="mimeopen --ask-default"
alias btrfs-tree="sudo btrfs subvol list / | cut -f9 -d' ' | sed -e 's/^/top\//' | as-tree"

#======================== safe
alias rm="rm -I --preserve-root"
alias mv="mv -i"
alias cp="cp -ri"
alias mkdir="mkdir -p"
alias ln="ln -i"
alias chown="chown --preserve-root"
alias chmod="chmod --preserve-root"
alias chgrp="chgrp --preserve-root"
