#============================ edit
# edit
e() {
  if ([ ! -f "$1" ] && [ ! -w "$PWD" ]) || ([ -f "$1" ] && [ ! -w "$1" ]); then
    sudo -e $*
  else
    $EDITOR $*
  fi
}

# edit (gui)
ee() {
  if ([ ! -f "$1" ] && [ ! -w "$PWD" ]) || ([ -f "$1" ] && [ ! -w "$1" ]); then
    sudo $GEDITOR $* &
    disown $!
  else
    $GEDITOR $* &
    disown $!
  fi
}

# pkm
